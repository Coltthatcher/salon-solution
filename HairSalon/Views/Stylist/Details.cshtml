@using HairSalon.Models
@model HairSalon.Models.Stylist
<h1>Stylist Schedule</h1>
<h1>@Html.DisplayFor(model => model.StylistName)</h1>

@if (@Model.Clients.Count == 0)
{
  <p> No clients have been added yet!</p>
}

<ul>
  @foreach (Client client in @Model.Clients)
  {
    <li> @Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
  }
</ul>

<p>@Html.ActionLink("Edit stylist", "Edit", new { id = Model.StylistId }, new { @class="btn"})</p>
<p>@Html.ActionLink("Back to stylists", "Index")</p>
<p>@Html.ActionLink("Add client", "Create", "Client")</p>
<p>@Html.ActionLink("Delete stylist", "Delete", new { id = Model.StylistId }, new { @class="btn" })</p>