@using HairSalon.Models;

<h1>Hair Stylists Available</h1>
<hr/>
@if (@Model.Count == 0)
{
  <h2>No stylist on the schedule yet!</h2>
}

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li> <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li></li>
  }
</ul>

<p>@Html.ActionLink("Add a new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>